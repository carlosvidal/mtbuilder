{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@js/*": [
                "src/js/*"
            ],
            "@utils/*": [
                "src/js/utils/*"
            ],
            "@components/*": [
                "src/js/components/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}