{
  "name": "@carlosvidalperu/mtbuilder",
  "version": "1.0.0",
  "description": "Lightweight drag-and-drop page builder web component",
  "type": "module",
  "main": "dist/page-builder.umd.cjs",
  "module": "dist/page-builder.js",
  "exports": {
    ".": {
      "import": "./dist/page-builder.js",
      "require": "./dist/page-builder.umd.cjs"
    }
  },
  "files": [
    "dist",
    "src/locales"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rimraf dist && NODE_ENV=production vite build",
    "build:dev": "rimraf dist && vite build --mode development",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "analyze": "vite build --mode analyze",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "page-builder",
    "drag-and-drop",
    "web-component",
    "wysiwyg",
    "email-builder",
    "landing-page"
  ],
  "author": "Carlos Vidal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carlosvidalperu/mtbuilder.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@rollup/plugin-terser": "^0.4.4",
    "eslint": "^9.39.2",
    "jsdom": "^28.0.0",
    "rimraf": "^5.0.5",
    "terser": "^5.24.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.18"
  }
}
